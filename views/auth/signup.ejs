<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
<%- include('../includes/navigation.ejs')%>

<main>
    <form class="login-form" action="/signup" method="POST" novalidate>
        <h1>Signup</h1>
        <% if (errorMessage){%>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <%}%>
        <div class="form-control">
            <label for="email">Email</label>
            <input
                    class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : ''%>"
                    type="email"
                    name="email"
                    id="email"
                    value="<%= oldInputs.email %>">
        </div>

        <div class="form-control">
            <label for="password">Password</label>
            <input
                    class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : ''%>"
                    type="password"
                    name="password"
                    id="password"
                    value="<%= oldInputs.password %>">
        </div>

        <div class="form-control">
            <label for="confirmPassword">Confirm Password</label>
            <input
                    class="<%= validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid' : ''%>"
                    type="password"
                    name="confirmPassword"
                    id="confirmPassword"
                    value="<%= oldInputs.confirmPassword %>">
        </div>

        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn" type="submit">Signup</button>
    </form>
</main>

<%- include('../includes/end.ejs')%>